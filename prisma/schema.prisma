generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_DATABASE_URL")
}

model WaitlistUser{
  id String @id @unique 
  email String 
  createdAt DateTime @default(now())
}

model User{
  id String @id @unique @default(cuid())
  email String @unique
  username String @unique
  name String?
  password String
  role Role @default(STUDENT)
  isActive Boolean @default(true)
  apiKeys ApiKey[]
  profile Profile?
  session Session?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email, username])
  @@index([role])
  @@index([createdAt])
  @@index([username])
}

model Session{
  id           String   @id @default(cuid())
  userId       String   @unique
  refreshToken String
  expiryDate   Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Profile{
  id String @id @unique @default(cuid())
  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio String?
  gender String?
  country String?
  socialLinks Json?

  academicInfo AcademicInfo?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  
  
  @@index([userId])
}

model AcademicInfo{
  id String @id @unique @default(cuid())
  profileId String @unique
  
  xp Int @default(0)
  level Int @default(1)
  streak Int @default(0)

  institution String?
  degree DegreeType?
  major String?
  semester String?

  enrollmentStatus EnrollmentStatus @default(FULL_TIME)
  graduationDate DateTime?
  enrolledDate DateTime?

  courses StudentCourseEnrollment[] 
  studentSkills StudentSkill[]
  studentChallenges StudentChallenge[]

  user Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  

  @@index([profileId])
}

model StudentCourseEnrollment{
  id String @id @unique @default(cuid())
  academicInfoId String
  courseId String

  academicInfo AcademicInfo @relation(fields: [academicInfoId], references: [id])
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  enrollmentDate DateTime @default(now())
  completedAt DateTime?
  completedStatus Boolean @default(false)
  xpEarned Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  

  @@unique([academicInfoId, courseId])
}

model Course{
  id String @id @unique @default(cuid())
  courseCode String @unique
  title String
  description String?
  xp Int
  department Department @default(EDUCATION)

  studentEnrollments StudentCourseEnrollment[]
  skills CourseSkill[]  
  challenges CourseChallenge[]
  // TODO : Add relation to Teacher model when created 
  // TODO : Add relation to assignments, exams, materials when created
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseCode])
  @@index([department])
}

model Skill{
  id String @id @unique @default(cuid())
  name String @unique
  description String?
  icon String?
  xpValue Int

  courses CourseSkill[]
  students StudentSkill[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseSkill{
  id String @id @unique @default(cuid())
  courseId String
  skillId String

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  proficiencyLevel ProficiencyLevel @default(BEGINNER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  

  @@unique([courseId, skillId])
}

model StudentSkill{
  id String @id @unique @default(cuid())
  academicInfoId String
  skillId String

  academicInfo AcademicInfo @relation(fields: [academicInfoId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  proficiencyLevel ProficiencyLevel @default(BEGINNER)
  xpEarned Int @default(0)
  
  acquiredAt DateTime @default(now()) // When student first acquired the skill
  masteredAt DateTime? // When student reached EXPERT level

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  

  @@unique([academicInfoId, skillId])
  @@index([academicInfoId])
  @@index([skillId])
  @@index([proficiencyLevel])
}

model Challenge{
  id String @id @unique @default(cuid())
  title String
  description String
  type ChallengeType
  difficulty ChallengeDifficulty @default(EASY)
  xpReward Int
  criteria Json // Storing challenge criteria/requirements as JSON

  courses CourseChallenge[]
  students StudentChallenge[]

  isActive Boolean @default(true)
  startsAt DateTime?
  endsAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([difficulty])
  @@index([type])
  @@index([isActive])
}

model CourseChallenge{
  id String @id @unique @default(cuid())
  courseId String
  challengeId String

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  challenge Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  isRequired Boolean @default(false) // Is this challenge mandatory for course completion?
  order Int @default(0) // Order in which challenges should be completed

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  

  @@unique([courseId, challengeId])
  @@index([courseId])
  @@index([challengeId])
}

model StudentChallenge{
  id String @id @unique @default(cuid())
  academicInfoId String
  challengeId String

  academicInfo AcademicInfo @relation(fields: [academicInfoId], references: [id], onDelete: Cascade)
  challenge Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  attempts Int @default(0)
  status ChallengeStatus @default(NOT_STARTED) 
  progress Int @default(0) // Progress percentage (0-100)
  result Json? // Store challenge results/score as JSON
  completedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  

  @@unique([academicInfoId, challengeId])
  @@index([academicInfoId])
  @@index([challengeId])
  @@index([status])
}

model ApiKey{
  id String @id @unique @default(cuid())
  key String @unique
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime?
}

enum Role{
  STUDENT
  TEACHER
  ADMIN
}

enum EnrollmentStatus{
  FULL_TIME
  PART_TIME
  SUSPENDED
  GRADUATED
}

enum DegreeType{
  BACHELORS
  MASTERS
  PHD
  DIPLOMA
  CERTIFICATE
}

enum Department{
  SCIENCE
  ARTS
  COMMERCE
  ENGINEERING
  MEDICINE
  LAW
  EDUCATION
  TECHNOLOGY
  OTHER
}

enum ProficiencyLevel{
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum ChallengeDifficulty{
  EASY
  MEDIUM
  HARD
  EXPERT
}

enum ChallengeType{
  DAILY
  WEEKLY
  MONTHLY
  ASSIGNMENT
  QUIZ
  PROJECT
  ACHIEVEMENT
}

enum ChallengeStatus{
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  FAILED
  ABANDONED
}